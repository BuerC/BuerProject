package lab5;
import java.io.*;
import java.util.LinkedList;
public class Producer extends Thread{
	//we make a thread cause we want to instantiate with the  Thread constructor
	private String text;
	private int number;
	private long time;
	private Fifo fifo;
	private String text_number;
	private int wait;
	Producer(Fifo F, String t, int x)
	{
		text  = t;
		fifo = F;
		wait  = x;
	}
	public void run()
	{
		number =  2;
		while(true)
		{
			time = System.currentTimeMillis()%100000;
			text_number = text+" "+number;
			try {
				fifo.put(text_number);
			}
			catch(HasRoom e) 
			{
				System.out.println("Produced"+" "+text_number+" "+time);
				number++;
			}
			finally
			{
				try {
					Thread.sleep(wait);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			
			
	}
		
	}
}

		
	
	


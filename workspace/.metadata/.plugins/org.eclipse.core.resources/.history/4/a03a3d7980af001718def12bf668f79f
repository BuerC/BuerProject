package lab5;
import java.io.*;
import java.util.*;
public class Fifo {
	ArrayList<String> array;
	String oldest;
	Fifo()
	{
		array = new ArrayList();
	}
	
	synchronized void put(String s) throws HasRoom
	{
		if(array.size()<10)
			{
				array.add(s);
				throw new HasRoom();
			}
		else 
			{
				System.out.println("Queue is full...Please Wait...");
			}
	}
	synchronized String get() throws IsEmpty
	{
		if(array.size()==0)
		{
			System.out.println("Queue is empty....Please Wait...");
			throw new IsEmpty();
		}
		else
		{
			oldest = array.get(0);
			array.remove(0);
		}
		return oldest;
	}
}
